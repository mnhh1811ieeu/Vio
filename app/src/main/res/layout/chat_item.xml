<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/messageItemRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- YOU (current user) message -->
    <LinearLayout
        android:id="@+id/youMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/youName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/you"
            android:textColor="#999"
            android:textSize="11sp" />

        <!-- Bản gốc / lịch sử (nếu hiển thị) sẽ nằm TRÊN tin hiện tại -->
        <LinearLayout
            android:id="@+id/youHistoryContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:visibility="gone" />

        <TextView
            android:id="@+id/youMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_sender"
            android:padding="10dp"
            android:text="@string/message"
            android:textColor="#fff"
            android:textSize="16sp" />

        <!-- Info 'Đã chỉnh sửa • Xem/Ẩn bản gốc' -->
        <TextView
            android:id="@+id/youEditedInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            android:textColor="#888888"
            android:textSize="11sp"
            android:visibility="gone" />

        <!-- Bản gốc trước khi sửa (màu khác) -->
        <TextView
            android:id="@+id/youOriginalMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:padding="8dp"
            android:background="#EEEEEE"
            android:textColor="#333333"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- OTHER (received) message -->
    <LinearLayout
        android:id="@+id/otherMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/otherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/unknown"
            tools:text="Ahihieu"
            android:textColor="#999"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/otherHistoryContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:visibility="gone" />

        <TextView
            android:id="@+id/otherMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_receiver"
            android:padding="10dp"
            android:text="@string/message"
            android:textColor="#000"
            android:textSize="16sp" />

        <!-- Info 'Đã chỉnh sửa • Xem/Ẩn bản gốc' -->
        <TextView
            android:id="@+id/otherEditedInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:textColor="#888888"
            android:textSize="11sp"
            android:visibility="gone" />

        <!-- Bản gốc trước khi sửa (màu khác) -->
        <TextView
            android:id="@+id/otherOriginalMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:padding="8dp"
            android:background="#EEEEEE"
            android:textColor="#333333"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
