<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/messageItemRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="8dp"
    android:paddingVertical="4dp">

    <!-- YOU (current user) message -->
    <LinearLayout
        android:id="@+id/youMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/youName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="@string/you"
            android:textColor="#6B7280"
            android:textSize="11sp" />

        <!-- Bản gốc / lịch sử (nếu hiển thị) sẽ nằm TRÊN tin hiện tại -->
        <LinearLayout
            android:id="@+id/youHistoryContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:visibility="gone" />

        <TextView
            android:id="@+id/youMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_sender"
            android:maxWidth="320dp"
            android:padding="12dp"
            android:text="@string/message"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/youVoiceLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_sender"
            android:maxWidth="320dp"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="14dp"
            android:paddingBottom="10dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/youVoicePlay"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_original_sender"
                android:padding="6dp"
                android:src="@drawable/ic_play"
                android:tint="#0F172A" />

            <TextView
                android:id="@+id/youVoiceDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="0:00"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Info 'Đã chỉnh sửa • Xem/Ẩn bản gốc' -->
        <TextView
            android:id="@+id/youEditedInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            android:textColor="#9CA3AF"
            android:textSize="11sp"
            android:visibility="gone" />

        <!-- Bản gốc trước khi sửa (màu khác) -->
        <TextView
            android:id="@+id/youOriginalMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:padding="10dp"
            android:background="@drawable/bg_original_sender"
            android:textColor="#0F172A"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- OTHER (received) message -->
    <LinearLayout
        android:id="@+id/otherMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/otherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/unknown"
            tools:text="Ahihieu"
            android:textColor="#6B7280"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/otherHistoryContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:visibility="gone" />

        <TextView
            android:id="@+id/otherMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_receiver"
            android:maxWidth="320dp"
            android:padding="12dp"
            android:text="@string/message"
            android:textColor="#111827"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/otherVoiceLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_receiver"
            android:maxWidth="320dp"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="14dp"
            android:paddingBottom="10dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/otherVoicePlay"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_original_receiver"
                android:padding="6dp"
                android:src="@drawable/ic_play"
                android:tint="#0F172A" />

            <TextView
                android:id="@+id/otherVoiceDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="0:00"
                android:textColor="#111827"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Info 'Đã chỉnh sửa • Xem/Ẩn bản gốc' -->
        <TextView
            android:id="@+id/otherEditedInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:textColor="#9CA3AF"
            android:textSize="11sp"
            android:visibility="gone" />

        <!-- Bản gốc trước khi sửa (màu khác) -->
        <TextView
            android:id="@+id/otherOriginalMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:padding="10dp"
            android:background="@drawable/bg_original_receiver"
            android:textColor="#0F172A"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
