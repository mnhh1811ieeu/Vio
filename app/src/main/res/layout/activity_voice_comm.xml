<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/headerVoice"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBackVoice"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            app:tint="#000000"/>

        <TextView
            android:text="Giao tiếp Giọng nói"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/headerVoice"
        app:layout_constraintBottom_toTopOf="@id/bottomPanel">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgSoundWave"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_voice_wave"
                android:layout_gravity="center"
                android:alpha="0.5"
                app:tint="#2196F3"/>

            <TextView
                android:id="@+id/tvStatus"
                android:text="Nhấn micro để nói..."
                android:layout_gravity="center"
                android:textColor="#757575"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvLiveText"
                android:text="Xin chào, bạn khỏe không?"
                android:textSize="32sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:lineSpacingMultiplier="1.2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp"
        android:paddingTop="20dp"
        android:background="#F5F5F5"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnMic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Nhấn để nói"
            android:src="@drawable/ic_mic"
            app:backgroundTint="#2196F3"
            app:tint="#FFFFFF"
            app:fabCustomSize="80dp"
            app:maxImageSize="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/btnKeyboard"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_circle_white"
            android:src="@drawable/ic_keyboard"
            app:tint="#757575"
            android:contentDescription="Gõ phím"
            app:layout_constraintEnd_toStartOf="@id/btnMic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnMic"
            app:layout_constraintBottom_toBottomOf="@id/btnMic"/>

        <ImageButton
            android:id="@+id/btnSpeaker"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_circle_white"
            android:src="@drawable/ic_volume_up"
            app:tint="#757575"
            android:contentDescription="Đọc lại"
            app:layout_constraintStart_toEndOf="@id/btnMic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnMic"
            app:layout_constraintBottom_toBottomOf="@id/btnMic"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>