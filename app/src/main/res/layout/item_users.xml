<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_7sdp"
    android:layout_marginTop="@dimen/_6sdp"
    android:background="@drawable/bg_user_item"
    android:foreground="?attr/selectableItemBackground"
    android:minHeight="64dp"
    android:padding="@dimen/_10sdp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/userAvatarCard"
        android:layout_width="@dimen/_48sdp"
        android:layout_height="@dimen/_48sdp"
        android:layout_marginStart="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_24sdp"
        app:strokeColor="@color/cardStroke"
        app:strokeWidth="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivUserImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/img" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/_12sdp"
        android:text="NgHien"
        android:textColor="@color/onSurface"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/userAvatarCard"
        app:layout_constraintEnd_toStartOf="@+id/tvUnreadCount"
        app:layout_constraintStart_toEndOf="@+id/userAvatarCard"
        app:layout_constraintTop_toTopOf="@+id/userAvatarCard" />

    <TextView
        android:id="@+id/tvUnreadCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_6sdp"
        android:paddingVertical="@dimen/_2sdp"
        android:text="333"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold"
        android:textColor="@color/onPrimary"
        android:background="@drawable/bg_unread_badge"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/userAvatarCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/userAvatarCard" />

</androidx.constraintlayout.widget.ConstraintLayout>