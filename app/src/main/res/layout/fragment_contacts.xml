<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F4F7"
    tools:context=".fm.ContactsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0068FF"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingHorizontal="16dp"
        android:paddingTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh bạ"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_input_message"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp">

            <EditText
                android:id="@+id/etSearchEmail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Tìm bạn bè qua email..."
                android:textSize="14sp"
                android:textColor="#000000"
                android:maxLines="1"
                android:inputType="textEmailAddress" />

            <ImageView
                android:id="@+id/btnSearchFriend"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_search"
                app:tint="#0068FF" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/searchResultCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/ivSearchAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">
            <TextView
                android:id="@+id/tvSearchName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/tvSearchEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnAddFriend"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Kết bạn"
            android:backgroundTint="#E3F2FD"
            android:textColor="#0068FF"
            android:textAllCaps="false"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvSearchStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="#D32F2F"
        android:visibility="gone"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRequestTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lời mời kết bạn"
                android:padding="12dp"
                android:textStyle="bold"
                android:background="#FFFFFF"
                android:textColor="#0068FF"
                android:visibility="gone"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFriendRequests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#F2F4F7"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Danh bạ của tôi"
                android:padding="12dp"
                android:textStyle="bold"
                android:background="#FFFFFF"
                android:textColor="#000000"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvContacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"/>

            <TextView
                android:id="@+id/tvEmptyContacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Danh bạ trống"
                android:gravity="center"
                android:padding="20dp"
                android:visibility="gone"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>