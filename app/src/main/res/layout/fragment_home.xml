<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".fm.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_1"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/CircleImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/imgAvatar"
            app:layout_constraintEnd_toStartOf="@id/btnNotification"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tvGreetingPrefix"
                android:text="Xin chào,"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvUsername"
                android:text="Chào mừng bạn đến Vio"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnNotification"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_popup_reminder"
            app:tint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <GridLayout
        android:id="@+id/gridFunctions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="10dp"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnAICamera"
            style="@style/HomeCardStyle"
            app:cardBackgroundColor="#E3F2FD">
            <LinearLayout style="@style/HomeCardContent">
                <ImageView
                    android:src="@drawable/ic_launcher_foreground"
                    style="@style/HomeIconStyle"
                    app:tint="#1976D2" />
                <TextView
                    android:text="Camera AI\n(Dịch ký hiệu)"
                    style="@style/HomeTextStyle" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnVoiceComm"
            style="@style/HomeCardStyle"
            app:cardBackgroundColor="#E8F5E9">
            <LinearLayout style="@style/HomeCardContent">
                <ImageView
                    android:src="@android:drawable/ic_btn_speak_now"
                    style="@style/HomeIconStyle"
                    app:tint="#388E3C" />
                <TextView
                    android:text="Chép lời\ntrực tiếp"
                    style="@style/HomeTextStyle" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnAssistant"
            style="@style/HomeCardStyle"
            app:cardBackgroundColor="#F3E5F5"> <LinearLayout style="@style/HomeCardContent">
            <ImageView
                android:src="@drawable/ic_camera_shutter"
                style="@style/HomeIconStyle"
                app:tint="#7B1FA2" />

            <TextView
                android:text="Mắt Thần AI\n(Gemini Vision)"
                style="@style/HomeTextStyle" />
        </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnNewChat"
            style="@style/HomeCardStyle"
            app:cardBackgroundColor="#FFF3E0">
            <LinearLayout style="@style/HomeCardContent">
                <ImageView
                    android:src="@android:drawable/ic_menu_send"
                    style="@style/HomeIconStyle"
                    app:tint="#F57C00" />
                <TextView
                    android:text="Chat"
                    style="@style/HomeTextStyle" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </GridLayout>

    <TextView
        android:id="@+id/tvRecentLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tin nhắn gần đây"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/gridFunctions" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerRecentChat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        tools:listitem="@android:layout/simple_list_item_2"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvRecentLabel"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
